<div class="food-list">
<h1>Foods</h1>
  <div class="foodadd-container">
  <button class="addfood-btn">
  <%= link_to "Add food", new_food_path %>
  </button>
  </div>

  <table class="foodlist-talbe">
    <thead>
      <tr>
        <th>Food</th>
        <th>Measurement unit</th>
        <th>Unit price</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
    <% @foods.each do |food| %>
      <tr>
        <td><%= food.name %></td>
        <td><%= food.measurement_unit %></td>
        <td>$<%= food.price %></td>
        <td><%= button_to "Delete", food_path(food.id), method: :delete %></td>
      </tr>
    <% end %>
  </tbody>
  </table>
</div>

